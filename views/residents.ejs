<!-- Residents collection -->
<%- include('partials/navbar') %>

<div style="padding:4%; padding-bottom: 22%; padding-top:3%; font-family:sans-serif;font-size: 15px;">
  <% if(isAdmin && appliedResidents.length){ %>
    <div style="text-align:center; margin:auto; display:block; padding:20px 10% 10px;  margin-bottom: 20px;">
      <div style="background-color:rgb(7, 28, 50); color:white; padding:1px 0; border-radius:0.5rem; max-width:500px; margin:auto; display:block; margin-bottom:10px">
        <h4>APPROVE NEW RESIDENTS</h4>
      </div>
      <form action="/approveResident" method="POST">
        <% appliedResidents.forEach(user => { %>
          <div style="max-width:500px; text-align:center; margin:auto; display:block; padding:10px 10%;background-color:whitesmoke; border-radius:0.5rem; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.01); margin-bottom: 10px;">
            <p><%= user.firstName %> <%= user.lastName %> - <%= user.flatNumber %></p>
            <div>
              <button style="margin-top: 0; border-radius: 15px;" class="btn btn-success btn-sm" type="submit" name=validate[<%= user._id %>] value="approved">YES<i class="fas fa-check-circle fa-2x"></i></button>
              <button style="margin-top: 0; border-radius: 15px;" class="btn btn-danger btn-sm" type="submit" name=validate[<%= user._id %>] value="declined">NO<i class="fas fa-times-circle fa-2x"></i></button>
            </div>
          </div>
        <% }) %>
      </form>
    </div>
  <% } %>
  <h2 class="residentHead">
      Residents of <%= societyName %>
  </h2>
  <div class="flex-container">
    <% societyResidents.forEach((resident) => { %>
      <div>
        <ul class="list-group zoom">
          <li class="list-group-item flat-number">
            <i class="fas fa-house-user"></i> <%= resident.flatNumber %>
          </li>
          <li class="list-group-item flat-owner"><%= resident.firstName %> <%= resident.lastName %></li>
          <li class="list-group-item">
            <i class="fas fa-phone-square-alt"></i> <%= resident.phoneNumber %>
          </li>
        </ul>
      </div>
    <% }) %>
  </div>
</div>
  
<%- include('partials/footbar') %>